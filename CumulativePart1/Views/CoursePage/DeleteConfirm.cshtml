@model CumulativePart1.Models.Course

<h2>Are you sure you want to delete this course?</h2>

<p>Course Name: @Model.CourseName</p>
<p>Course Code: @Model.CourseCode</p>
<p>Teacher ID: @Model.TeacherId</p>

<a href="/CoursePage/Show/@Model.CourseId">No, take me back</a>

<form method="POST" action="/CoursePage/Delete/@Model.CourseId">
    <input type="submit" value="Confirm Delete" />
</form>